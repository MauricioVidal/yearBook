<h2>Edição <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class => 'form-horizontal', html: { method: :put }) do |f| %>
  <%= devise_error_messages!%>

  <div class="form-group">
    <%= f.label "Login (example@yearbook.com)", :class =>'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Foto", :class =>'col-sm-2 control-label'%>
    <!--<div class='col-sm-4 thumbnail thumb'>-->
        <%=image_tag current_user.avatar.url(:medium), :class => "img-thumbnail center-block"%>
    <!--</div>-->
    <%= f.file_field :avatar, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :nome_completo, :class =>'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.text_field :nome_completo, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cidade, :class =>'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.text_field :cidade, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :estado, :class =>'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.text_field :estado, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Email do Usuário", :class =>'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.email_field :email_usuario, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Descrição", :class =>'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.text_area :descricao, autofocus: true, cols: 40, rows: 10, :class => "form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(Deixe em branco se você não quiser alterar)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
  </div>

  <div class="field">
    <%= f.label "Confirmação da password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"  %>
  </div>

  <div class="field">
    <%= f.label "Password atual" %> <i>(Precisamos da sua senha atual para confirmar sua identidade e efetuar as mudanças)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar Perfil", :class => 'btn btn-success', :class => "form-control"  %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza:"}, method: :delete,  :class => "btn btn-danger" %></p>