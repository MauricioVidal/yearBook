<h2 class="text-center">Cadastre-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group col-sm-12">
    <%= f.label "Login " %>(example@yearbook.com)<br />
    <%= f.text_field :email, autofocus: true , :class => "form-control"%>
  </div>

  <div class="form-group col-sm-4">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="form-group col-sm-4 col-sm-offset-1">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label "Foto" %><br />
    <%= f.file_field :avatar, autofocus: true%>
  </div>

  <div class="form-group col-sm-8">
    <%= f.label :nome_completo %><br />
    <%= f.text_field :nome_completo, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group col-sm-5">
    <%= f.label :cidade %><br />
    <%= f.text_field :cidade, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group col-sm-2">
    <%= f.label :estado %><br />
    <%= f.text_field :estado, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label "Email do Usuário" %><br />
    <%= f.email_field :email_usuario, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group col-sm-9">
    <%= f.label "Descrição" %><br />
    <%= f.text_area :descricao, autofocus: true, cols: 40, rows: 6, :class => "form-control" %>
  </div>


  <div class="actions col-sm-4">
    <%= f.submit "Cadastrar", :class => "btn btn-success" %>
  </div>
<% end %>


